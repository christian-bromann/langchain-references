{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL",
    "CACHE_BUST",
    "USE_LOCAL_IR",
    "BLOB_URL",
    "NEXT_PUBLIC_BLOB_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["BLOB_READ_WRITE_TOKEN", "BLOB_URL", "CACHE_BUST", "USE_LOCAL_IR"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "fmt": {
      "cache": false
    },
    "fmt:check": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
